<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/app_bar"/>

        <ImageView
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_person"
            android:tint="@android:color/white"
            android:layout_gravity="center"/>

        <za.co.randomteam.help.fonts.FuturaTextView
            android:text="Jane Doe"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"/>
        <za.co.randomteam.help.fonts.FuturaTextView
            android:text="Please kindly go check up on Jane who needs you"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"/>

        <RelativeLayout
            android:id="@+id/mobile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="40dp">

            <za.co.randomteam.help.fonts.FuturaTextView
                android:text="Mobile"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"/>

            <za.co.randomteam.help.fonts.FuturaTextView
                android:text="0784798345345"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"/>

        </RelativeLayout>
        <View
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            />
        <RelativeLayout
            android:id="@+id/address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">

            <za.co.randomteam.help.fonts.FuturaTextView
                android:text="Address"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"/>

            <za.co.randomteam.help.fonts.FuturaTextView
                android:text="200 Lee Road, Centurion"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"/>

        </RelativeLayout>
        <View
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            />
        <RelativeLayout
            android:id="@+id/distance_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">

            <za.co.randomteam.help.fonts.FuturaTextView
                android:text="Distance from you"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"/>

            <za.co.randomteam.help.fonts.FuturaTextView
                android:text="23 meters"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>